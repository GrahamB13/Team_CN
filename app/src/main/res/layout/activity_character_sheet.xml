<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#476A7D"
    android:fitsSystemWindows="true"
    tools:context=".CharacterSheet">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="236dp"
        android:layout_height="96dp"
        android:fontFamily="@font/mystery_quest"
        android:text="Character Information"
        android:textAlignment="center"
        android:textColor="#DE9B6F"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/more_info_cs"
        android:layout_width="126dp"
        android:layout_height="58dp"
        android:alpha=".80"
        android:backgroundTint="#DE9B6F"
        android:backgroundTintMode="src_over"
        android:fontFamily="sans-serif"
        android:text="More Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="358dp"
        android:layout_height="307dp"
        android:ems="10"
        android:fontFamily="@font/mystery_quest"
        android:inputType="text"
        android:text="Inventory"
        android:textAlignment="center"
        android:textColor="#DE9B6F"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="353dp"
        android:layout_height="178dp"
        android:ems="10"
        android:fontFamily="@font/mystery_quest"
        android:inputType="text"
        android:text="Notes"
        android:textAlignment="center"
        android:textColor="#DE9B6F"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />

    <Button
        android:id="@+id/back_cs"
        android:layout_width="126dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:alpha=".80"
        android:backgroundTint="#B3476A7D"
        android:backgroundTintMode="src_over"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>